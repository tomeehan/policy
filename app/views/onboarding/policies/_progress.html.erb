<% total = account.onboarding_policies.count %>
<% completed = account.onboarding_policies.completed.count %>
<% processing = account.onboarding_policies.processing.count %>
<% failed = account.onboarding_policies.failed.count %>

<div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-200 dark:border-gray-700">
  <div class="mb-6">
    <div class="flex justify-center mb-4">
      <% if completed < total %>
        <svg class="animate-spin h-12 w-12 text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      <% else %>
        <svg class="h-12 w-12 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      <% end %>
    </div>

    <p class="text-4xl font-bold text-gray-900 dark:text-white">
      <%= completed %>/<%= total %>
    </p>
    <p class="text-gray-600 dark:text-gray-400 mt-1">documents processed</p>
  </div>

  <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 mb-6">
    <div class="bg-primary h-3 rounded-full transition-all duration-500" style="width: <%= total > 0 ? (completed.to_f / total * 100).round : 0 %>%"></div>
  </div>

  <% if processing > 0 %>
    <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
      Currently processing <%= processing %> document<%= processing == 1 ? '' : 's' %>...
    </p>
  <% end %>

  <% if failed > 0 %>
    <p class="text-sm text-red-500 mb-4">
      <%= failed %> document<%= failed == 1 ? '' : 's' %> failed to process
    </p>
  <% end %>
</div>
