<%= turbo_frame_tag policy do %>
  <div class="flex items-center justify-between p-4 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
    <div class="flex items-center gap-3 flex-1">
      <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>

      <%= form_with model: [:onboarding, policy], class: "flex-1", data: { controller: "autosave", autosave_delay_value: 500 } do |f| %>
        <%= f.text_field :name,
            class: "w-full bg-transparent border-0 border-b border-transparent hover:border-gray-300 focus:border-primary focus:ring-0 px-0 py-1 text-gray-900 dark:text-white",
            data: { action: "input->autosave#save" } %>
      <% end %>
    </div>

    <div class="flex items-center gap-2 ml-4">
      <span class="text-xs text-gray-500"><%= policy.document.filename %></span>
      <%= button_to onboarding_policy_path(policy), method: :delete, class: "text-gray-400 hover:text-red-500 transition-colors", data: { turbo_confirm: "Remove this policy?" } do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>
  </div>
<% end %>
