<% content_for :title, "Upload Your Policies" %>

<div class="container mx-auto max-w-3xl p-4 py-12">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold mb-2">Upload Your Existing Policies</h1>
    <p class="text-gray-600 dark:text-gray-400">Drag and drop your policy documents below. We support PDF and Word documents.</p>
  </div>

  <div class="mb-8" data-controller="policy-upload" data-policy-upload-url-value="<%= onboarding_policies_path %>">
    <div
      class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-12 text-center cursor-pointer hover:border-primary transition-colors"
      data-policy-upload-target="dropzone"
      data-action="dragover->policy-upload#dragover dragenter->policy-upload#dragenter dragleave->policy-upload#dragleave drop->policy-upload#drop click->policy-upload#click"
    >
      <input type="file" multiple accept=".pdf,.doc,.docx" class="hidden" data-policy-upload-target="input" data-action="change->policy-upload#change">
      <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
        <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
      <p class="mt-4 text-gray-600 dark:text-gray-400">
        <span class="font-medium text-primary">Click to upload</span> or drag and drop
      </p>
      <p class="mt-1 text-sm text-gray-500">PDF, DOC, DOCX files</p>
    </div>
  </div>

  <div id="policies" class="space-y-3 mb-8">
    <%= render @policies %>
  </div>

  <div id="get-started-button">
    <% if @policies.any? %>
      <div class="flex justify-center">
        <%= button_to "Get Started", complete_onboarding_policies_path, method: :post, class: "btn btn-primary btn-large" %>
      </div>
    <% end %>
  </div>
</div>
