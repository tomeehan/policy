<% content_for :title, "Policies" %>

<div class="container mx-auto p-4">
  <div class="my-8">
    <h1>Policies</h1>

    <% if @policy_documents.any? %>
      <div class="mt-6 space-y-3">
        <% @policy_documents.each do |policy_document| %>
          <div class="flex items-center justify-between p-4 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
            <div class="flex items-center gap-3">
              <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="text-gray-900 dark:text-white"><%= policy_document.name %></span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="mt-6 text-gray-600 dark:text-gray-400">No policies yet.</p>
    <% end %>
  </div>
</div>
